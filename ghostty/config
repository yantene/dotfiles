# Ghostty Configuration

# Font
font-family = UDEV Gothic NF
font-size = 10

# Scrollback
scrollback-limit = 100000

# Appearance
background-opacity = 0.9
window-decoration = false

# tmux互換キーバインド (プレフィックス: Ctrl-t)
# ペイン分割
keybind = ctrl+t>s=new_split:down
keybind = ctrl+t>v=new_split:right

# ペイン移動 (hjkl)
keybind = ctrl+t>h=goto_split:left
keybind = ctrl+t>j=goto_split:down
keybind = ctrl+t>k=goto_split:up
keybind = ctrl+t>l=goto_split:right

# ペインを閉じる
keybind = ctrl+t>x=close_surface

# ペインのズーム
keybind = ctrl+t>z=toggle_split_zoom

# ペインリサイズ (Ctrl+矢印、プレフィックスなし)
keybind = ctrl+left=resize_split:left,20
keybind = ctrl+right=resize_split:right,20
keybind = ctrl+up=resize_split:up,10
keybind = ctrl+down=resize_split:down,10

# タブ操作 (tmuxのウィンドウ相当)
keybind = ctrl+t>c=new_tab
keybind = ctrl+t>n=next_tab
keybind = ctrl+t>p=previous_tab
